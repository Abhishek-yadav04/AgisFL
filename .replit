modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Production Setup"

[[workflows]]
name = "Production Setup"
author = "agent"

[[workflows.tasks]]
task = "shell.exec"
args = "node setup-production.js"

[[workflows]]
name = "Development Server"
author = "agent"

[[workflows.tasks]]
task = "shell.exec"
args = "npm install && npm run dev"

[[workflows]]
name = "Build Client"
author = "agent"

[[workflows.tasks]]
task = "shell.exec"
args = "npm run client-setup"

[deployment]
run = ["npm", "start"]
build = ["npm", "run", "build"]
deploymentTarget = "static"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 443