
{
  "appId": "com.cybershield.flids",
  "productName": "CyberShield FL-IDS",
  "copyright": "Copyright Â© 2025 CyberShield",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*",
    "client/dist/**/*",
    "app.py",
    "fl_ids_core.py",
    "templates/**/*",
    "requirements.txt",
    {
      "from": "node_modules",
      "to": "node_modules",
      "filter": [
        "**/*"
      ]
    }
  ],
  "extraResources": [
    {
      "from": "python-deps",
      "to": "python-deps"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico",
    "publisherName": "CyberShield",
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/assets/icon.icns",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png",
    "category": "Development"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
